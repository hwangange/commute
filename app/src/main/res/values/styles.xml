<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OpaqueAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/opaque_colorPrimary</item>
        <item name="colorPrimaryDark">@color/opaque_colorPrimaryDark</item>
        <item name="colorAccent">@color/opaque_colorAccent</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

</resources>
