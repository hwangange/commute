<resources>


    <style name="AppBaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowBackground">@color/grey</item>
        <item name="android:textColor">@color/darkBlack</item>
        <item name="android:spinnerStyle">@style/LightSpinner</item>
        <item name="android:switchTextAppearance">@style/LightSwitch</item>
    </style>

    <style name="DarkAppTheme" parent="ThemeOverlay.AppCompat.Dark">
        <!-- no action bar -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowBackground">@color/lightBlack</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:spinnerStyle">@style/DarkSpinner</item>
        <item name="android:switchTextAppearance">@style/DarkSwitch</item>
        <item name="android:colorBackground">@color/lightBlack</item>

    </style>

    <!-- This will set the fade in animation on all your activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="LightSpinner" parent="Base.Widget.AppCompat.Spinner">
        <item name = "android:background">@color/grey</item>
    </style>

    <style name="DarkSpinner" parent="Base.Widget.AppCompat.Spinner">
        <item name = "android:background">@color/darkBlack</item>
        <item name="android:colorBackground">@color/darkBlack</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="LightSwitch" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name = "android:textColor">@color/darkBlack</item>
    </style>
    <style name="DarkSwitch" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name = "android:textColor">@color/white</item>
        <item name= "android:color">@color/white</item>
    </style>




    <!-- Base application theme. -->
    <!-- this is the original theme. -->
    <style name="OriginalAppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- <item name="android:titleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Title</item>-->

    <style name="OpaqueAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/opaque_colorPrimary</item>
        <item name="colorPrimaryDark">@color/opaque_colorPrimaryDark</item>
        <item name="colorAccent">@color/opaque_colorAccent</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- Tab -->
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/normalText</item>
    </style>
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/normalText</item>
    </style>

    <style name="AppSpinnerTextAppearance" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/normalText</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
